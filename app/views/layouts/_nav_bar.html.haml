%nav.bg-zinc-600
  .mx-auto.max-w-7xl.px-2.sm:px-6.lg:px-8
    .relative.flex.h-16.items-center.justify-between
      .flex.flex-1.sm:items-stretch
        .flex.flex-shrink-0.items-center
          %img.h-8.w-auto{alt: "Item Management", src: "https://tailwindui.com/img/logos/mark.svg?color=blue&shade=500"}/
        .hidden.sm:ml-6.sm:block
          .flex.space-x-4.mt-1.text-xl
            = link_to "Item Management", root_path, class: "font-semibold text-white no-underline"
      .absolute.inset-y-0.right-0.flex.items-center.pr-2.sm:static.sm:inset-auto.sm:ml-6.sm:pr-0
        - if Current.session.present?
          = link_to "Sign Out", sign_out_path, data: { "turbo-method": "DELETE"}, class: "bg-blue-500 rounded no-underline text-blue-100 px-4 py-2"
        - else
          = tailwind_button("Login", sign_in_path)
